# ============================================
# CLIENT ENVIRONMENT CONFIGURATION - Next.js
# ============================================
# This file is used by the frontend client (Next.js/React)
# Copy this file to .env.local and update the values
# Note: Only variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# ⚠️ NEVER commit .env file with real secrets to repository

# ============================================
# API CONFIGURATION
# ============================================
# Public API URL - accessible from browser
# Local development: http://localhost:5000/api/v1
# Docker development: http://localhost:5000/api/v1
# Production: https://api.example.com/api/v1
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1

# Socket.io server URL for real-time features (orders, notifications)
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000

# API request timeout in milliseconds (30 seconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Image domains allowed for Next.js Image component (comma-separated)
NEXT_PUBLIC_IMAGE_DOMAINS=

# Storage URL for building full image URLs from imagePath
# This should match your backend's file storage base URL
# Local development: http://localhost:5000
# Production: https://your-cdn-or-storage-url.com
NEXT_PUBLIC_STORAGE_URL=http://localhost:5000

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Development mode
NODE_ENV=development

# Application title
NEXT_PUBLIC_APP_NAME=Restaurant Management

# Application description
NEXT_PUBLIC_APP_DESCRIPTION=Modern restaurant management system

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features at runtime
NEXT_PUBLIC_FEATURE_INVENTORY=true
NEXT_PUBLIC_FEATURE_RESERVATIONS=true
NEXT_PUBLIC_FEATURE_ORDERS=true
NEXT_PUBLIC_FEATURE_BILLING=true
NEXT_PUBLIC_FEATURE_STAFF_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# ============================================
# INTERNATIONALIZATION (i18n)
# ============================================
# Default language
NEXT_PUBLIC_DEFAULT_LOCALE=en
# Supported locales (comma-separated)
NEXT_PUBLIC_SUPPORTED_LOCALES=en,vi

# ============================================
# UI/UX CONFIGURATION
# ============================================
# Theme: 'light', 'dark', or 'auto'
NEXT_PUBLIC_THEME=auto

# Animation enabled
NEXT_PUBLIC_ANIMATIONS_ENABLED=true

# ============================================
# ANALYTICS (Optional)
# ============================================
# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Sentry (Error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ============================================
# Google Maps API for location features
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Firebase configuration (if using Firebase services)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
