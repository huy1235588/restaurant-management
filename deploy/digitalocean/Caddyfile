# Caddyfile - Automatic HTTPS with Let's Encrypt
# Replace yourdomain.com with your actual domain

# Configuration for your domain
{ $DOMAIN:localhost } {
    # Automatic HTTPS
    # Caddy automatically obtains and renews SSL certificates from Let's Encrypt
    
    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        
        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Permissions Policy
        Permissions-Policy "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()"
        
        # Remove server header
        -Server
    }
    
    # Gzip compression
    encode gzip zstd
    
    # API routes - proxy to backend
    handle /api/* {
        reverse_proxy server:5000
    }
    
    # Socket.IO - WebSocket proxy to backend
    handle /socket.io/* {
        reverse_proxy server:5000
    }
    
    # Static files and pages - proxy to frontend
    handle {
        reverse_proxy client:3000
    }
    
    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
        level INFO
    }
}

# HTTP redirect to HTTPS (automatic, no config needed)
# Caddy automatically redirects HTTP to HTTPS

# Example configuration for multiple domains:
# www.yourdomain.com {
#     redir https://yourdomain.com{uri} permanent
# }
